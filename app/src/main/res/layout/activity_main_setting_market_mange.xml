<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">





        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="사진은 3장을 첨부해주세요!!"
            android:textColor="#ffff0000"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pc1"
                android:layout_width="398dp"
                android:layout_height="248dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:src="@drawable/image_border" />

            <Button
                android:id="@+id/pc1_button"
                android:layout_width="384dp"
                android:layout_height="40dp"
                android:text="사진 선택"
                android:textSize="10sp"
                android:onClick="onButton_pc1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pc2"
                android:layout_width="398dp"
                android:layout_height="248dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:src="@drawable/image_border" />

            <Button
                android:id="@+id/pc2_button"
                android:layout_width="384dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="사진 선택"
                android:textSize="10sp"
                android:onClick="onButton_pc2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pc3"
                android:layout_width="398dp"
                android:layout_height="248dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:src="@drawable/image_border" />

            <Button
                android:id="@+id/pc3_button"
                android:layout_width="384dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="사진 선택"
                android:textSize="10sp"
                android:onClick="onButton_pc3"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="PC방 이름 입력"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="PC방 주소 입력"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="PC방 총자리 입력"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="PC방 특정 게임 전용 좌석 입력"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="PC방 컴퓨터 사양 입력"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="PC방 공지사항 입력"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="125dp"
            />


        <Button
            android:id="@+id/comfirm_button"
            android:layout_width="384dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="확인"
            android:textSize="10sp" />


    </LinearLayout>
</ScrollView>
