<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/contest2"
                android:layout_width="398dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:maxHeight="200dp"
                android:maxWidth="200dp"
                android:src="@drawable/image_border" />

            <Button
                android:id="@+id/contest_button2"
                android:layout_width="384dp"
                android:layout_height="40dp"
                android:text="사진 수정"
                android:textSize="10sp"
                android:onClick="onButton_contest_correction"/>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="대회 이름 수정"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="대회 장소 수정"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="대회 기간 수정"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="신청 기간 수정"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="신청 자격 수정"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="참여 방법 수정"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="수상 수정"/>

        <Button
            android:id="@+id/correction_button"
            android:layout_width="384dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="수정"
            android:textSize="10sp" />



    </LinearLayout>
</ScrollView>